@model List<ActiveFuneralResponse>

@if (Model.Count > 0)
{
    <div class="row">
        <div class="col-md-12">
            <table class="table  table-hover table-striped table-bordered ">
                <thead class="table-success">
                    <tr>

                        <th>Profile Number for Deceased</th>
                        <th>Full Name for Deceased</th>
                        <th>Funeral Date</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>
                                @item.DeceasedsProfileNumber
                            </td>

                            <td>
                                @item.DeceasedFullName
                            </td>
                            <td>
                                @item.Created.ToShortDateString()
                            </td>

                        </tr>
                    }

                </tbody>

            </table>
        </div>
    </div>
}
else
{
    <div class="row">
        <p>No Records Founds</p>
    </div>
    <p></p>
}