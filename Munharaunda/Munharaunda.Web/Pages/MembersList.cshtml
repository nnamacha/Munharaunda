@page
@model Munharaunda.Web.Pages.MembersListModel
@using Munharaunda.Core.Constants;
@{
}

@if (Model.Profiles.ResponseCode == ReturnCodesConstant.R00)
{
    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th>Profile Number</th>
                        <th>Full Name</th>
                        <th>Status</th>
                        <th>Active Since</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Profiles.ResponseData)
                    {
                        <tr>
                            <td>
                                @item.ProfileNumber
                            </td>
                            <td>
                                @item.FullName
                            </td>
                            <td>
                                @item.StatusDescription
                            </td>
                            <td>
                                @item.ActiveDate
                            </td>
                        </tr>
                    }

                </tbody>

            </table>
        </div>
    </div>
}
else
{
    <div class="row">
        <p>No Records Founds</p>
    </div>
    <p></p>
}

